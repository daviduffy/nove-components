{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "jest": true
  },
  "extends": "airbnb",
  "rules": {
    "no-console": 0,
    "no-unused-vars": 1,
    "camelcase": 0,
    "comma-dangle": ["error", {
      "arrays": "never",
      "objects": "never",
      "imports": "never",
      "exports": "never",
      "functions": "ignore",
    }],
    "jsx-a11y/anchor-is-valid": 1,
    "no-shadow": 1,
    "react/jsx-filename-extension": 0,
    "react/forbid-prop-types": 0,
    "import/no-named-as-default": 1,
    "object-curly-newline": 1,
  },
  "plugins": ["html", "markdown", "jest"]
}